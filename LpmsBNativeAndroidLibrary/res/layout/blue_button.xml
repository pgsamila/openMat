<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#5555FF" />
            <stroke
                android:width="2dp"
                android:color="#5555FF" />
            <corners
                android:radius="5dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="#000000" />
            <stroke
                android:width="2dp"
                android:color="#5555FF" />
            <corners
                android:radius="6dp" />
        </shape>
    </item>
</selector>